                                            <input type="text" @onchange="(e) => UpdateValue1(index, e.Value.ToString())" value="@values[i]" />
                                            <button @onclick="() => RemoveValue1(index)" class="btn btn-outline-danger">Remove</button>
                                        </div>
                                    }
                                    <hr />
                                    <div>
                                        <button @onclick="HandleSubmit1" class="btn btn-success">Submit</button>
                                    </div>
                                    <hr />
                                    @for (int j = 0; j < values.Count; j++)
                                    {
                                        <p>@values[j]</p>
                                    }
                                </div>
                                @code {
                                    private List<string> values1 = new List<string>();

                                    private void AddValue1() => values.Add("");
                                    private void UpdateValue1(int i, string value) => values[i] = value;
                                    private void RemoveValue1(int i) => values.RemoveAt(i);
                                    private void HandleSubmit1()
                                    {
                                        //Access and validate the values list here
                                    }
                                }
                            </div>
                            <div class="form-row">

                                <div class="form-group col-md-6">
                                    <button class="btn btn-primary">Add Payslip</button>
                                    <button class="btn btn-primary">Print Slips</button>
                                </div>



                            </div>









                        </form>
                    </RadzenTabsItem>


                </Tabs>
            </RadzenTabs>
            <br />
      
        </RadzenCard>
    </ChildContent>
</RadzenFieldset>