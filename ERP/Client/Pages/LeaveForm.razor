@layout HRLayout
@page "/leave"
<RadzenFieldset>
    <HeaderTemplate>
        <span>
            <b style="font-size:25px">Leave Form</b>
        </span>
    </HeaderTemplate>
    <ChildContent>
        <RadzenCard>
            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Name</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Department</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Rank</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>Staff ID</label>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>From</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="form-group col-md-6">
                        <label>To</label>
                        <input type="date" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    
                </div>
             
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </RadzenCard>
    </ChildContent>
</RadzenFieldset>

