@page "/staff/new"
@layout HRLayout
<RadzenFieldset>
    <HeaderTemplate>
        <span>
            <b style="font-size:25px">New Staff</b>
        </span>
    </HeaderTemplate>
    <ChildContent>
        <RadzenSteps>
            <Steps>
                <RadzenStepsItem Text="Personal">
                    <RadzenCard>
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Surname</label>
                                    <input type="email" class="form-control">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Othername(s)</label>
                                    <input type="password" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Date of Birth</label>
                                    <input type="password" class="form-control">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Phone</label>
                                    <input type="password" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Hometown</label>
                                    <input type="password" class="form-control">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Place of birth</label>
                                    <input type="password" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Email</label>
                                    <input type="email" class="form-control">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Residential Address</label>
                                    <input type="email" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                               
                                <div class="form-group col-md-6">
                                    <h3 style="margin-top: 1rem">Upload Photo</h3>
                                    <RadzenUpload Multiple="true" Accept="image/*" Url="upload/multiple" Style="margin-bottom: 20px;"
                                                  />
                                </div>
                            </div>
                        </form>
                    </RadzenCard>
                </RadzenStepsItem>
                <RadzenStepsItem Text="Adminstrative">
                    <RadzenCard>
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Department</label>
                                    <input type="email" class="form-control">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Designation</label>
                                    <input type="email" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label>Account number</label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Tin number</label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="form-group col-md-4">
                                    <label>Social security number</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Appointment Date</label>
                                    <input type="text" class="form-control">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Retirement Date</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                        </form>
                    </RadzenCard>
                </RadzenStepsItem>
                <RadzenStepsItem Text="Spous">
                    <RadzenCard>
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Name of spouse</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Address</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Phone</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                        </form>
                    </RadzenCard>
                </RadzenStepsItem>
                <RadzenStepsItem Text="Dependants">
                    <RadzenCard>
                        <form>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Name of Dependant</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Address</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Phone</label>
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Dependant</button>
                        </form>
                    </RadzenCard>
                </RadzenStepsItem>
            </Steps>
        </RadzenSteps>
        @*<div class="row">
               <div class="form-group row">
                       <RadzenButton ButtonStyle="ButtonStyle.Success">Save</RadzenButton>
                       <RadzenButton ButtonStyle="ButtonStyle.Light" Click=@(args => navigation.NavigateTo("/staff/list"))>Cancel</RadzenButton>
               </div>
            </div>*@
    </ChildContent>
</RadzenFieldset>

